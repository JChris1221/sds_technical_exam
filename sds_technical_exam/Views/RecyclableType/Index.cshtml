@model List<sds_technical_exam.Models.RecyclableType>

@{
    Page.Title = "Role Types";
}


<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
<h2>Recyclable Types</h2>
<div class="container">
    
    <div class="row">

        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>Type</th>
                    <th>Rate</th>
                    <th>MinKg</th>
                    <th>MaxKg</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @*<tr>
                        <td>Donna Snider</td>
                        <td>Customer Support</td>
                        <td>New York</td>
                        <td>27</td>
                        <td>2011/01/25</td>
                        <td>$112,000</td>
                    </tr>*@
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="4">No Data in Recyclable Types</td>
                    </tr>
                }
                @foreach (var recyclable_types in Model)
                {
                    <tr>
                        <td>@recyclable_types.Type</td>
                        <td>@recyclable_types.Rate</td>
                        <td>@recyclable_types.MinKg</td>
                        <td>@recyclable_types.MaxKg</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { ID = recyclable_types.Id }, new { @class = "btn btn-primary" })
                        </td>
                        <td><a href="#" class="btn btn-danger">Delete</a></td>
                        
                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Add", "Add", null, new { @class = "btn btn-success" })
    </div>
</div>