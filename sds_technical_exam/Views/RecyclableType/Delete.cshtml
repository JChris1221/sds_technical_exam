@model sds_technical_exam.ViewModels.RecyclableTypeViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    Page.Title = "Delete Recyclable Type";
}
@{
    if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["ErrorMessage"]
        </div>
    }
}
<div class="alert alert-danger" role="alert">
    Are you sure you want to delete this data? (This action cannot be undone)
</div>
<div class="card">
    <div class="card-header card-header-warning">
        <h1 class="h3 mb-0 text-gray-800">Delete Recyclable Type</h1>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.RecyclableType.Id, new { @value = Model.RecyclableType.Id })

            <div class="form-group">
                @Html.LabelFor(m => m.RecyclableType.Type)
                @Html.TextBoxFor(m => m.RecyclableType.Type, new { @class = "form-control", @readonly = true, @value = Model.RecyclableType.Type })
                @Html.ValidationMessageFor(m => m.RecyclableType.Type, "", new { @class = "field-validation-error text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.RecyclableType.Rate)
                @Html.TextBoxFor(m => m.RecyclableType.Rate, new { @class = "form-control disabled", @readonly = true, @value = Model.RecyclableType.Rate })
                @Html.ValidationMessageFor(m => m.RecyclableType.Rate, "", new { @class = "field-validation-error text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.RecyclableType.MinKg)
                @Html.TextBoxFor(m => m.RecyclableType.MinKg, new { @class = "form-control disabled", @readonly = true, @value = Model.RecyclableType.MinKg })
                @Html.ValidationMessageFor(m => m.RecyclableType.MinKg, "", new { @class = "field-validation-error text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.RecyclableType.MaxKg)
                @Html.TextBoxFor(m => m.RecyclableType.MaxKg, new { @class = "form-control disabled", @readonly = true, @value = Model.RecyclableType.MaxKg })
                @Html.ValidationMessageFor(m => m.RecyclableType.MaxKg, "", new { @class = "field-validation-error text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
                @Html.ActionLink("Cancel", "Index", "RecyclableType", null, new { @class = "btn btn-warning" })
            </div>
            
        }
    </div>
</div>
<!--/Form-->
<!-- /Content -->