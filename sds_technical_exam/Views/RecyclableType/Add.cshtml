@model sds_technical_exam.ViewModels.RecyclableTypeViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    Page.Title = "Add Recyclable Type";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h1 class="h3 mb-0 text-gray-800">Add Recyclable Type</h1>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.RecyclableType.Type)
                    @Html.TextBoxFor(m => m.RecyclableType.Type, new { @class = "form-control", @value = Model.RecyclableType.Type })
                    @Html.ValidationMessageFor(m => m.RecyclableType.Type, "", new { @class = "field-validation-error text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RecyclableType.Rate)
                    @Html.TextBoxFor(m => m.RecyclableType.Rate, new { @class = "form-control", @value = Model.RecyclableType.Rate })
                    @Html.ValidationMessageFor(m => m.RecyclableType.Rate, "", new { @class = "field-validation-error text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RecyclableType.MinKg)
                    @Html.TextBoxFor(m => m.RecyclableType.MinKg, new { @class = "form-control", @value = Model.RecyclableType.MinKg })
                    @Html.ValidationMessageFor(m => m.RecyclableType.MinKg, "", new { @class = "field-validation-error text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RecyclableType.MaxKg)
                    @Html.TextBoxFor(m => m.RecyclableType.MaxKg, new { @class = "form-control", @value = Model.RecyclableType.MaxKg })
                    @Html.ValidationMessageFor(m => m.RecyclableType.MaxKg, "", new { @class = "field-validation-error text-danger" })
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            }
        </div>
    </div>
    <!--/Form-->
    <!-- /Content -->
</div>
