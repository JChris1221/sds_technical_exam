@model sds_technical_exam.ViewModels.RecyclableItemViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    Page.Title = "Add Recyclable Type";
}


    <div class="card">
        <div class="card-header">
            <h1 class="h3 mb-0 text-gray-800">Add Recyclable Type</h1>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.RecyclableItem.RecyclableTypeId)
                    @Html.DropDownListFor(m => m.RecyclableItem.RecyclableTypeId,Model.RecyclableTypes, "Select Recyclable Type", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RecyclableItem, "", new { @class = "field-validation-error text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RecyclableItem.Weight)
                    @Html.TextBoxFor(m => m.RecyclableItem.Weight, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.RecyclableType.Rate, "", new { @class = "field-validation-error text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RecyclableType.MinKg)
                    @Html.TextBoxFor(m => m.RecyclableType.MinKg, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.RecyclableType.MinKg, "", new { @class = "field-validation-error text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RecyclableType.MaxKg)
                    @Html.TextBoxFor(m => m.RecyclableType.MaxKg, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.RecyclableType.MaxKg, "", new { @class = "field-validation-error text-danger" })
                </div>
                <button type="submit" class="btn btn-success mt-3">Add</button>
            }
        </div>
    </div>
    <!--/Form-->
    <!-- /Content -->