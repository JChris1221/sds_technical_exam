@model List<sds_technical_exam.Models.RecyclableItem>

@{
    Page.Title = "Recyclable Items";
}
@{
    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
}

<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
<h2>Recyclable Types</h2>
<div class="container">

    <div class="row">

        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>Recyclable Type</th>
                    <th>Weight</th>
                    <th>ComputedRate</th>
                    <th>Item Description</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
               
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="4">No Data in Recyclable Items</td>
                    </tr>
                }
                @foreach (var recyclable_item in Model)
                {
                    <tr>
                        <td>@recyclable_item.RecyclableType.Type</td>
                        <td>@recyclable_item.Weight</td>
                        <td>@recyclable_item.ComputedRate</td>
                        <td>@recyclable_item.ItemDescription</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { ID = recyclable_item.Id }, new { @class = "btn btn-primary" })
                        </td>
                        <td>@Html.ActionLink("Delete", "Delete", new { ID = recyclable_item.Id }, new { @class = "btn btn-danger" })</td>

                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Add", "Add", null, new { @class = "btn btn-success" })
    </div>
</div>